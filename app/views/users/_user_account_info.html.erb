<table class="table table-bordered table-hover">
    <tbody>
      <tr>
        <td cols=2><img src="<%= current_user.profile_image_url %>"></td>
      </tr>
      <tr>
        <th>Name</th>
        <td><%= current_user.name %></td>
      </tr>
      <tr>
        <th>E-mail id</th>
        <td><%= current_user.account.email %></td>
      </tr>
      <tr>
        <th>Current Plan</th>
        <td title="<%=h current_user.account.plan.summary %>"><%= current_user.account.plan.title %> ( <%= raw plan_message(current_user) %> )</td>
      </tr>
    </tbody>
</table>